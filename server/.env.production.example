# Production Environment Variables
# Copy this to .env and fill in real values

# PostgreSQL connection (use your hosted database URL)
DATABASE_URL=postgresql://user:password@host:5432/scouting?sslmode=require

# Server port (usually set by hosting platform)
PORT=3001

# REQUIRED: Generate with: openssl rand -base64 32
JWT_SECRET=your-secure-random-string-here

# RECOMMENDED: Enables encrypted backups
BACKUP_ENCRYPTION_KEY=another-secure-random-string-here

# REQUIRED for production security
NODE_ENV=production

# Frontend URL for CORS (update to your actual domain)
FRONTEND_URL=https://your-app.railway.app
